<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@color/yellow"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/img_hotpdoduct"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/categories1"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/name_hotproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Figure Hinata Hyuga - Naruto Shippuden"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/price_hotproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ä‘ 75 000"
            android:textSize="15dp"
            android:textColor="@color/centercolor"/>
        <TextView
            android:id="@+id/num_sold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sold 134"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textAlignment="textEnd"
            android:layout_marginRight="10dp"
        />
    </LinearLayout>
</LinearLayout>