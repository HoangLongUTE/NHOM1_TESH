<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:id="@+id/center_layout_fv"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_weight="0.85"
        android:orientation="vertical"
        android:background="@color/gray">

        <ImageView
            android:id="@+id/img_favorite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/conan"/>

        <TextView
            android:id="@+id/tv_title_fv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Conan Detective EP80"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_price_fv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/red"
                android:text="đ 20.570"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_sell_fv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Đã bán 143"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>